@{
  Layout = "_Layout.cshtml";
}

<div style="
        padding: 40px 30px;
        margin: 0 30px;
        line-height: 28px;
        text-align: inherit;
        background-color: #ffffff;
        ">
  <div style="
          font-family: inherit;
          text-align: center;
          margin-bottom: 2rem;
          ">
    <span style="
            color: #024b74;
            font-size: 28px;
            ">
      Start your journey with
      Claro!
    </span>
  </div>

  <p style="
          font-family: inherit;
          text-align: center;
          ">
    You will find properties that suit
    all your choices. Our experts are
    here to help you find the right
    property to achieve your goals.
  </p>
  <hr>
  <div style="text-align: center;">
    @* <p>@EmailRes.hi @Model.ViewData["name"],</p> *@
    <p>@Html.Raw(Model.Content)</p>
    @if (!string.IsNullOrEmpty(Model.Url))
    {
      <a href="@Model.Url">Go To</a>
    }
  </div>
</div>
